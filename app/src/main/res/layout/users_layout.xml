<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailTxtViewAllUsers"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idLblViewAllUsers"
            android:text="Id: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/emailTxtViewAllUsers"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/idTxtViewAllUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailTxtViewAllUsers"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/idLblViewAllUsers"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roleLblViewAllUsers"
            android:text="Role: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/idTxtViewAllUsers"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roleTxtViewAllUsers"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/idTxtViewAllUsers"
            android:layout_toRightOf="@id/roleLblViewAllUsers"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>