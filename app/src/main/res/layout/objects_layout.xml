<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameTxtViewAllObjects"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cityLblViewAllObjects"
            android:text="City: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/nameTxtViewAllObjects"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/cityTxtViewAllObjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTxtViewAllObjects"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/cityLblViewAllObjects"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countryLblViewAllObjects"
            android:text="Country: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/cityLblViewAllObjects"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countryTxtViewAllObjects"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/cityTxtViewAllObjects"
            android:layout_toRightOf="@id/countryLblViewAllObjects"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateLblViewAllObjects"
            android:text="Date: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/countryLblViewAllObjects"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/dateTxtViewAllObjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/countryTxtViewAllObjects"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/dateLblViewAllObjects"
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>